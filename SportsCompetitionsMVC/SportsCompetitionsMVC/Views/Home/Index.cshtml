@using SportsCompetitionsMVC.ViewModels
@model List<SportsCompetitionsMVC.ViewModels.DisplayEventViewModel>



<!-- Carousel
    ================================================== -->
<div id="myCarousel" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
   
    <div class="carousel-inner">
        <div class="item active">
            <img src="~/Images/one.jpeg" alt="First slide">
            <div class="container">
                <div class="carousel-caption">
                    <h1>Zawody sportowe.</h1>
                    <p>Weź udział w zawodach i zarejestruj się już dziś!</p>
                    <p><a class="btn btn-lg btn-primary" href="@Url.Action("Register","Account")" role="button">Zarejestruj się</a></p>
                </div>
            </div>
        </div>
        
    </div>
   
</div><!-- /.carousel -->
<!-- Marketing messaging and featurettes
    ================================================== -->
<!-- Wrap the rest of the page in another container to center all the content. -->





<div class="container marketing">


    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" type="text/css">
    <div class="row">
        @foreach (var item in Model)
        {

            <div class="col-md-4">
                <div class="column">

                    <!-- Post-->
                    <div class="post-module">
                        <!-- Thumbnail-->
                        <div class="thumbnail">
                            <div class="date">
                                <a href="@Url.Action("Join","Competition",new { id = @item.ID })" >
                           
                                    <div class="day"><i class="fa fa-bars" aria-hidden="true"></i></div>
                                </a>
                            </div>
                            <img src="@item.Image" class="img-responsive" alt="">
                        </div>
                        <!-- Post Content-->
                        <div class="post-content">
                            <div class="category">@item.Category</div>
                            <h1 class="title">@item.Title</h1>
                            <h2 class="sub_title"> @item.StartDate</h2>
                            <p class="description">@item.Description</p>
                            <div class="post-meta"><span class="timestamp"><i class="fa fa-clock-">o</i> 6 mins ago</span><span class="comments"><i class="fa fa-comments"></i><a href="#"> @item.CompetitorsCount zapisanych uczestników</a></span></div>
                        </div>
                    </div>
                </div>
            </div>
        }

    </div>



     
</div>
<footer>
    &reg; Paweł Płowucha, Grzegorz Chmura, Arkadiusz Zwardoń, Mateusz Przbyło, Jakub Kubala
</footer>
<script>
    $(window).load(function () {
        $('.post-module').hover(function () {
            $(this).find('.description').stop().animate({
                height: "toggle",
                opacity: "toggle"
            }, 300);
        });
    });
</script>